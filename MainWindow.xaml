<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="127" Margin="0,307,0,0" VerticalAlignment="Top" Width="800" Fill="#FFD4D4D4"/>

        <Button x:Name="Launch" Content="Loading" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" Height="92" Width="244" Click="LaunchGame" FontSize="18" IsDefault="True" IsEnabled="False"/>
        <TextBlock x:Name="LauncherVersionText" HorizontalAlignment="Left" Margin="745,390,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Segoe UI" Foreground="Black" Text="v0.1"/>
        <TextBlock x:Name="GameVersionText" HorizontalAlignment="Center" Margin="0,364,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" TextAlignment="Center" FontSize="14"><Run Text="Installed Version"/><Run Language="en-au" Text=" Text"/></TextBlock>

    </Grid>
</Window>
